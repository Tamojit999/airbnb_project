<% layout('./layouts/boilerplate') -%>
<body>
  
  <form class="FORM needs-validation" novalidate method="post" action="/listings/<%= editdata._id %>?_method=PUT">

    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" class="form-control" id="title" value="<%= editdata.title %>" name="title" required>
      <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input type="url" class="form-control" id="image" value="<%= editdata.image.url %>" name="image" required>
      <div class="invalid-feedback">Please provide a valid image URL.</div>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Price:</label>
      <input type="number" class="form-control" id="price" value="<%= editdata.price %>" name="price" min="0" required>
      <div class="invalid-feedback">Please enter a valid price.</div>
    </div>
        
    <div class="mb-3">
      <label for="location" class="form-label">Location:</label>
      <input type="text" class="form-control" id="location" value="<%= editdata.location %>" name="location" required>
      <div class="invalid-feedback">Please enter a location.</div>
    </div>

    <div class="mb-3">
      <label for="country" class="form-label">Country:</label>
      <input type="text" class="form-control" id="country" value="<%= editdata.country %>" name="country" required>
      <div class="invalid-feedback">Please enter a country.</div>
    </div>
        
    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <textarea id="description" class="form-control" name="description" rows="5" required><%= editdata.description %></textarea>
      <div class="invalid-feedback">Please provide a description.</div>
    </div>
  
    <button type="submit" class="newbtn">Submit</button>
  </form>
